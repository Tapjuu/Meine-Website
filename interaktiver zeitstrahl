<!-- Kalender für den gewählten Monat -->
<div id="calendar"></div>

<script>
function showMonth(month) {
    let calendar = document.getElementById('calendar');
    calendar.innerHTML = ''; // Clear previous calendar

    let daysInMonth = new Date(2025, month, 0).getDate(); // Get the number of days in the month

    for (let i = 1; i <= daysInMonth; i++) {
        let day = document.createElement('div');
        day.classList.add('day');
        day.innerHTML = i;
        day.onclick = function() { showDay(i, month); };
        calendar.appendChild(day);
    }
}

function showDay(day, month) {
    alert('Tag ' + day + ' im Monat ' + month + ' anzeigen.');
    // Hier kannst du das Interface hinzufügen, um Notizen und Kommentare anzuzeigen und hinzuzufügen.
}
</script>

